# Sample Environment Configuration File
# Copy this file to .env and update the values for your setup

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=imsrc
DB_USER=your_username
DB_PASSWORD=your_password

# Optional: Database URL (alternative to individual settings above)
# DATABASE_URL=postgresql://username:password@localhost:5432/imsrc

# Application Configuration
# Set to 'development' for debug mode, 'production' for deployment
ENVIRONMENT=development

# Security Configuration
# Generate a secure secret key for session management
SECRET_KEY=your-super-secret-key-here-change-this

# FAISS Index Configuration
# Path where FAISS index files will be stored
FAISS_INDEX_PATH=data/faiss_index.bin

# Image Storage Configuration
# Maximum file size for image uploads (in bytes)
MAX_FILE_SIZE=10485760

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Optional: External API Keys (if needed for extensions)
# OPENAI_API_KEY=your-openai-key
# HUGGINGFACE_TOKEN=your-hf-token

# Development Settings
# Set to true to enable auto-reload in development
DEBUG=true
RELOAD=true

# CORS Settings (for frontend-backend communication)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000